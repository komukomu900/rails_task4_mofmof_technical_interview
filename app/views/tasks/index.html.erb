<h1>一覧</h1>
<table>
  <tr>
    <th>タスク名</th>
    <th>タスク内容</th>
    <th>タスクの状況</th>
    <th>タスクの締め切り</th>
  </tr>
  <% @task.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.content %></td>
    <td><%= task.state %></td>
    <td><%= task.deadline %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to '編集', edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete %></td>
  </tr>
  <% end %>
</table>
<%= link_to '新規作成', new_task_path %>